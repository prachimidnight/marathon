<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Marathon 2026</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #0f172a;
      /* slate-900 */
    }

    .glass-header {
      background: rgba(15, 23, 42, 0.8);
      backdrop-filter: blur(12px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .runner-card {
      background: rgba(30, 41, 59, 0.5);
      border: 1px solid rgba(255, 255, 255, 0.05);
      transition: all 0.2s ease;
    }

    .runner-card:hover {
      background: rgba(30, 41, 59, 0.8);
      border-color: rgba(249, 115, 22, 0.3);
    }

    /* Custom scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
    }

    ::-webkit-scrollbar-track {
      background: #0f172a;
    }

    ::-webkit-scrollbar-thumb {
      background: #334155;
      border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #475569;
    }
  </style>
</head>

<body class="min-h-screen text-slate-200 flex flex-col">
  <!-- Navigation -->
  <nav class="glass-header sticky top-0 z-50 px-6 py-4 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 bg-orange-500 rounded-lg flex items-center justify-center shadow-lg shadow-orange-500/20">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2">
          </path>
        </svg>
      </div>
      <div>
        <h1 class="text-xl font-bold text-white leading-tight">Admin Dashboard</h1>
        <p class="text-xs text-slate-400 font-medium uppercase tracking-wider">Marathon 2026</p>
      </div>
    </div>
    <div class="flex items-center gap-4">
      <span class="text-sm text-slate-400 mr-2">Welcome, Admin</span>
      <a href="/logout"
        class="bg-slate-800 hover:bg-red-500/20 hover:text-red-400 text-slate-300 px-4 py-2 rounded-lg text-sm font-semibold transition-all border border-slate-700">
        Logout
      </a>
    </div>
  </nav>

  <main class="max-w-7xl mx-auto p-6">
    <!-- Stats Summary -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="runner-card p-6 rounded-2xl">
        <p class="text-slate-400 text-sm font-medium mb-1">Total Runners</p>
        <h3 class="text-3xl font-bold text-white">
          <%= runners.length %>
        </h3>
      </div>
      <div class="runner-card p-6 rounded-2xl">
        <p class="text-slate-400 text-sm font-medium mb-1">Total Collections</p>
        <h3 class="text-3xl font-bold text-orange-500">
          ₹<%= runners.reduce((acc, r)=> acc + (r.fee || 0), 0).toLocaleString('en-IN') %>
        </h3>
      </div>
      <div class="runner-card p-6 rounded-2xl">
        <p class="text-slate-400 text-sm font-medium mb-1">Database Status</p>
        <div class="flex items-center gap-2">
          <span
            class="w-2.5 h-2.5 rounded-full <%= dbStatus === 'connected' ? 'bg-green-500 shadow-[0_0_12px_rgba(34,197,94,0.5)]' : 'bg-red-500 shadow-[0_0_12px_rgba(239,68,68,0.5)]' %> animate-pulse"></span>
          <span class="text-lg font-bold text-white uppercase tracking-tight">
            <%= dbStatus==='connected' ? 'Online' : 'Offline' %>
          </span>
        </div>
      </div>
    </div>

    <% if (dbStatus !=='connected' ) { %>
      <!-- Connection Error Banner -->
      <div
        class="bg-red-500/10 border border-red-500/20 rounded-2xl p-6 mb-8 flex items-start gap-4 animate-in fade-in slide-in-from-top-4 duration-500">
        <div class="w-12 h-12 bg-red-500/20 rounded-xl flex items-center justify-center shrink-0">
          <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z">
            </path>
          </svg>
        </div>
        <div class="flex-1">
          <h4 class="text-red-400 font-bold text-lg mb-1">Database Connection Failed</h4>
          <p class="text-slate-400 text-sm leading-relaxed">
            The application is unable to reach your MongoDB Atlas cluster. This is typically caused by security or
            network settings.
          </p>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
            <div class="bg-slate-900/50 p-3 rounded-lg border border-slate-700/50">
              <p class="text-xs font-bold text-slate-500 uppercase mb-2">Check IP Whitelist</p>
              <p class="text-xs text-slate-400">Ensure your current IP address is whitelisted in MongoDB Atlas (Network
                Access tab).</p>
            </div>
            <div class="bg-slate-900/50 p-3 rounded-lg border border-slate-700/50">
              <p class="text-xs font-bold text-slate-500 uppercase mb-2">Network Restriction</p>
              <p class="text-xs text-slate-400">If you are on a public/corporate network, it might be blocking Atlas
                DNS. Try using a mobile hotspot.</p>
            </div>
          </div>
        </div>
      </div>
      <% } %>

        <!-- Search & Filters -->
        <div class="runner-card p-6 rounded-2xl mb-8">
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="md:col-span-2 relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
              <input type="text" id="searchInput" placeholder="Search name, email, or phone..."
                class="block w-full pl-10 pr-3 py-2.5 bg-slate-800/50 border border-slate-700 rounded-xl text-slate-200 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-orange-500/50 focus:border-orange-500 transition-all">
            </div>
            <div>
              <select id="categoryFilter"
                class="block w-full px-3 py-2.5 bg-slate-800/50 border border-slate-700 rounded-xl text-slate-200 focus:outline-none focus:ring-2 focus:ring-orange-500/50 transition-all">
                <option value="all">All Categories</option>
                <option value="5 kilometer">5 KM</option>
                <option value="10 kilometer">10 KM</option>
                <option value="21 kilometer">21 KM</option>
              </select>
            </div>
            <div>
              <select id="statusFilter"
                class="block w-full px-3 py-2.5 bg-slate-800/50 border border-slate-700 rounded-xl text-slate-200 focus:outline-none focus:ring-2 focus:ring-orange-500/50 transition-all">
                <option value="all">All Statuses</option>
                <option value="completed">Completed</option>
                <option value="pending">Pending</option>
                <option value="failed">Failed</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Runners Table -->
        <div class="runner-card rounded-2xl overflow-hidden shadow-xl">
          <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
              <thead>
                <tr class="bg-slate-800/50 border-bottom border-slate-700">
                  <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-400">Runner Info</th>
                  <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-400">Category & Fee</th>
                  <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-400">Payment Details</th>
                  <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-400">Status</th>
                  <th class="px-6 py-4 text-xs font-bold uppercase tracking-wider text-slate-400">Date</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-700/50">
                <% if (runners.length===0) { %>
                  <tr>
                    <td colspan="5" class="px-6 py-12 text-center text-slate-500">
                      No runners registered yet.
                    </td>
                  </tr>
                  <% } %>
                    <% runners.forEach(runner=> { %>
                      <tr class="hover:bg-slate-800/30 transition-colors">
                        <td class="px-6 py-4">
                          <div class="text-white font-semibold">
                            <%= runner.first_name %>
                              <%= runner.last_name %>
                          </div>
                          <div class="text-sm text-slate-400">
                            <%= runner.email %>
                          </div>
                          <div class="text-xs text-slate-500 mt-1">
                            <%= runner.mobile_no %> | <%= runner.city %>
                          </div>
                          <div class="text-xs text-slate-500 mt-0.5">
                            T-Shirt: <span class="text-slate-400">
                              <%= runner.tshirt_size %>
                            </span> | <%= runner.blood_group %>
                          </div>
                          <div class="text-xs text-slate-500 mt-0.5">
                            Age: <span class="text-slate-400">
                              <%= runner.age_group %>
                            </span> | <a href="<%= runner.id_proof_path %>" target="_blank"
                              class="text-orange-500 hover:underline">View ID</a>
                          </div>
                        </td>
                        <td class="px-6 py-4">
                          <span
                            class="px-2.5 py-1 rounded-md text-xs font-bold bg-orange-500/10 text-orange-400 uppercase tracking-wide">
                            <%= runner.category %>
                          </span>
                          <div class="text-white font-medium mt-1">₹<%= runner.fee.toLocaleString('en-IN') %>
                          </div>
                        </td>
                        <td class="px-6 py-4">
                          <div class="text-xs text-slate-400">Order: <span class="text-slate-300 font-mono">
                              <%= runner.order_id %>
                            </span></div>
                          <div class="text-xs text-slate-400 mt-0.5">Payment: <span class="text-slate-300 font-mono">
                              <%= runner.payment_id %>
                            </span></div>
                        </td>
                        <td class="px-6 py-4">
                          <% if (runner.payment_status==='completed' ) { %>
                            <span
                              class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold bg-green-500/10 text-green-400">
                              <span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span>
                              Paid
                            </span>
                            <% } else { %>
                              <span
                                class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold bg-yellow-500/10 text-yellow-400">
                                <span class="w-1.5 h-1.5 bg-yellow-500 rounded-full"></span>
                                <%= runner.payment_status %>
                              </span>
                              <% } %>
                        </td>
                        <td class="px-6 py-4 text-sm text-slate-400">
                          <%= new Date(runner.registration_date).toLocaleDateString('en-IN', { day: '2-digit' ,
                            month: 'short' , year: 'numeric' }) %>
                            <div class="text-xs opacity-50">
                              <%= new Date(runner.registration_date).toLocaleTimeString('en-IN', { hour: '2-digit' ,
                                minute: '2-digit' }) %>
                            </div>
                        </td>
                      </tr>
                      <% }) %>
              </tbody>
            </table>
          </div>
        </div>
  </main>

  <!-- Branding Footer -->
  <footer class="mt-12 mb-12 text-center">
    <p class="text-slate-500 text-sm">
      &copy; 2026 Marathon. All rights reserved. <span class="text-orange-500 mx-2"> </span> Powered by <span
        class="font-bold text-orange-500 italic">runr</span>
    </p>
  </footer>
  <script>
    const searchInput = document.getElementById('searchInput');
    const categoryFilter = document.getElementById('categoryFilter');
    const statusFilter = document.getElementById('statusFilter');
    const tableBody = document.querySelector('tbody');
    const runnerCount = document.querySelector('h3.text-white');
    const totalCollection = document.querySelector('h3.text-orange-500');

    let debounceTimer;

    const fetchRunners = async () => {
      const search = searchInput.value;
      const category = categoryFilter.value;
      const status = statusFilter.value;

      try {
        const response = await fetch(`/api/runners?search=${encodeURIComponent(search)}&category=${category}&status=${status}`);
        const runners = await response.json();
        updateTable(runners);
        updateStats(runners);
      } catch (error) {
        console.error('Error fetching runners:', error);
      }
    };

    const updateTable = (runners) => {
      if (runners.length === 0) {
        tableBody.innerHTML = `
          <tr>
            <td colspan="5" class="px-6 py-12 text-center text-slate-500">
              No runners found matching your filters.
            </td>
          </tr>
        `;
        return;
      }

      tableBody.innerHTML = runners.map(runner => `
        <tr class="hover:bg-slate-800/30 transition-colors">
          <td class="px-6 py-4">
            <div class="text-white font-semibold">
              ${runner.first_name} ${runner.last_name}
            </div>
            <div class="text-sm text-slate-400">
              ${runner.email}
            </div>
            <div class="text-xs text-slate-500 mt-1">
              ${runner.mobile_no} | ${runner.city}
            </div>
            <div class="text-xs text-slate-500 mt-0.5">
              T-Shirt: <span class="text-slate-400">${runner.tshirt_size}</span> | ${runner.blood_group}
            </div>
             <div class="text-xs text-slate-500 mt-0.5">
               Age: <span class="text-slate-400">${runner.age_group}</span> | <a href="${runner.id_proof_path}" target="_blank" class="text-orange-500 hover:underline">View ID</a>
            </div>
          </td>
          <td class="px-6 py-4">
            <span class="px-2.5 py-1 rounded-md text-xs font-bold bg-orange-500/10 text-orange-400 uppercase tracking-wide">
              ${runner.category}
            </span>
            <div class="text-white font-medium mt-1">₹${runner.fee.toLocaleString('en-IN')}</div>
          </td>
          <td class="px-6 py-4">
            <div class="text-xs text-slate-400">Order: <span class="text-slate-300 font-mono">${runner.order_id}</span></div>
            <div class="text-xs text-slate-400 mt-0.5">Payment: <span class="text-slate-300 font-mono">${runner.payment_id || 'N/A'}</span></div>
          </td>
          <td class="px-6 py-4">
            ${runner.payment_status === 'completed' ? `
              <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold bg-green-500/10 text-green-400">
                <span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span>
                Paid
              </span>
            ` : `
              <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold bg-yellow-500/10 text-yellow-400">
                <span class="w-1.5 h-1.5 bg-yellow-500 rounded-full"></span>
                ${runner.payment_status}
              </span>
            `}
          </td>
          <td class="px-6 py-4 text-sm text-slate-400">
            ${new Date(runner.registration_date).toLocaleDateString('en-IN', { day: '2-digit', month: 'short', year: 'numeric' })}
            <div class="text-xs opacity-50">
              ${new Date(runner.registration_date).toLocaleTimeString('en-IN', { hour: '2-digit', minute: '2-digit' })}
            </div>
          </td>
        </tr>
      `).join('');
    };

    const updateStats = (runners) => {
      runnerCount.textContent = runners.length;
      const total = runners.reduce((acc, r) => acc + (r.fee || 0), 0);
      totalCollection.textContent = `₹${total.toLocaleString('en-IN')}`;
    };

    searchInput.addEventListener('input', () => {
      clearTimeout(debounceTimer);
      debounceTimer = setTimeout(fetchRunners, 300);
    });

    categoryFilter.addEventListener('change', fetchRunners);
    statusFilter.addEventListener('change', fetchRunners);
  </script>
</body>

</html>

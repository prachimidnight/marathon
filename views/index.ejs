<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Marathon 2026 | Registration</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Outfit', sans-serif;
      background-color: #0f172a;
      /* Slate-900 */
    }

    .glass-container {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .animate-float {
      animation: float 6s ease-in-out infinite;
    }

    @keyframes float {

      0%,
      100% {
        transform: translateY(0);
      }

      50% {
        transform: translateY(-10px);
      }
    }

    .error-message {
      color: #f97316;
      /* orange-500 */
      font-size: 0.75rem;
      margin-top: 0.25rem;
      display: none;
    }

    input:invalid:not(:placeholder-shown) {
      border-color: #f97316;
    }

    .custom-select-container {
      position: relative;
    }

    .custom-select-trigger {
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .custom-options {
      position: absolute;
      top: 110%;
      left: 0;
      right: 0;
      background: #1e293b;
      /* slate-800 */
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 0.75rem;
      overflow: hidden;
      z-index: 50;
      display: none;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
    }

    .custom-options.show {
      display: block;
    }

    .custom-option {
      padding: 0.75rem 1rem;
      cursor: pointer;
      transition: all 0.2s;
    }

    .custom-option:hover {
      background: rgba(249, 115, 22, 0.1);
      color: #f97316;
    }

    .custom-option.selected {
      background: #f97316;
      color: white;
    }

    .chevron {
      transition: transform 0.3s;
    }

    .custom-select-container.open .chevron {
      transform: rotate(180deg);
    }
  </style>
</head>

<body class="text-slate-100 min-h-screen flex flex-col items-center justify-center p-6">

  <!-- Hero Section -->
  <header class="text-center mb-12 animate-float">
    <h1
      class="text-5xl md:text-7xl font-bold bg-gradient-to-r from-orange-400 to-orange-600 bg-clip-text text-transparent mb-4">
      Marathon 2026
    </h1>
    <p class="text-slate-400 text-lg md:text-xl font-light">Push Your Limits. Conquer the Streets.</p>
  </header>

  <!-- Form Container -->
  <main class="w-full max-w-2xl">
    <div class="glass-container p-8 md:p-12 rounded-3xl shadow-2xl">
      <h2 class="text-2xl font-semibold mb-8 text-orange-500">Registration</h2>

      <form id="marathonForm" class="space-y-6" novalidate>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- First Name -->
          <div class="space-y-1">
            <label for="first_name" class="text-sm font-medium text-slate-300">First Name</label>
            <input type="text" id="first_name" name="first_name" placeholder="Enter first name" required
              class="w-full bg-slate-800/50 border border-slate-700 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-orange-500 transition-all">
            <div id="first_name_error" class="error-message">Please fill out this field.</div>
          </div>
          <!-- Last Name -->
          <div class="space-y-1">
            <label for="last_name" class="text-sm font-medium text-slate-300">Last Name</label>
            <input type="text" id="last_name" name="last_name" placeholder="Enter last name" required
              class="w-full bg-slate-800/50 border border-slate-700 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-orange-500 transition-all">
            <div id="last_name_error" class="error-message">Please fill out this field.</div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Email -->
          <div class="space-y-1">
            <label for="email" class="text-sm font-medium text-slate-300">Email Address</label>
            <input type="email" id="email" name="email" placeholder="email@example.com" required
              class="w-full bg-slate-800/50 border border-slate-700 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-orange-500 transition-all">
            <div id="email_error" class="error-message">Please enter a valid email address.</div>
          </div>
          <!-- Mobile No -->
          <div class="space-y-1">
            <label for="mobile_no" class="text-sm font-medium text-slate-300">Mobile No (10-digit)</label>
            <input type="tel" id="mobile_no" name="mobile_no" required pattern="[6-9][0-9]{9}" placeholder="9876543210"
              class="w-full bg-slate-800/50 border border-slate-700 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-orange-500 transition-all">
            <div id="mobile_no_error" class="error-message">Please enter a valid 10-digit mobile number.</div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Gender -->
          <div class="space-y-1">
            <label class="text-sm font-medium text-slate-300">Gender</label>
            <div class="custom-select-container" id="genderDropdown">
              <input type="hidden" name="gender" id="gender" required>
              <div
                class="custom-select-trigger w-full bg-slate-800/50 border border-slate-700 rounded-xl px-4 py-3 text-slate-400">
                <span>Select Gender</span>
                <svg class="chevron w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </div>
              <div class="custom-options">
                <div class="custom-option" data-value="Male">Male</div>
                <div class="custom-option" data-value="Female">Female</div>
                <div class="custom-option" data-value="Other">Other</div>
              </div>
            </div>
            <div id="gender_error" class="error-message">Please select your gender.</div>
          </div>
          <!-- Category -->
          <div class="space-y-1">
            <label class="text-sm font-medium text-slate-300">Category</label>
            <div class="custom-select-container" id="categoryDropdown">
              <input type="hidden" name="category" id="category" required>
              <div
                class="custom-select-trigger w-full bg-slate-800/50 border border-slate-700 rounded-xl px-4 py-3 text-slate-400">
                <span>Select Category</span>
                <svg class="chevron w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </div>
              <div class="custom-options">
                <div class="custom-option" data-value="5K">5K</div>
                <div class="custom-option" data-value="10K">10K</div>
                <div class="custom-option" data-value="Half Marathon">Half Marathon</div>
                <div class="custom-option" data-value="Full Marathon">Full Marathon</div>
              </div>
            </div>
            <div id="category_error" class="error-message">Please select a category.</div>
          </div>
        </div>

        <!-- Registration Fee Display -->
        <div class="p-4 bg-orange-500/10 border border-orange-500/20 rounded-2xl flex justify-between items-center">
          <span class="text-slate-300 font-medium">Registration Fee:</span>
          <span id="feeDisplay" class="text-2xl font-bold text-orange-500">â‚¹0</span>
        </div>

        <!-- T&C -->
        <div class="space-y-1">
          <div class="flex items-center space-x-3">
            <input type="checkbox" id="terms" name="terms" required
              class="w-5 h-5 rounded border-slate-700 bg-slate-800 text-orange-500 focus:ring-orange-500 focus:ring-offset-slate-900 transition-all cursor-pointer">
            <label for="terms" class="text-sm text-slate-400 cursor-pointer">
              I agree to the <a href="#" class="text-orange-500 hover:underline">Terms & Conditions</a>
            </label>
          </div>
          <div id="terms_error" class="error-message">You must agree to the terms.</div>
        </div>

        <!-- Submit Button -->
        <button type="submit"
          class="w-full bg-gradient-to-r from-orange-500 to-orange-600 text-white font-bold py-4 rounded-xl shadow-lg hover:shadow-orange-500/20 hover:scale-[1.02] active:scale-[0.98] transition-all">
          REGISTER NOW
        </button>
      </form>
    </div>
  </main>

  <footer class="mt-12 text-slate-500 text-sm">
    &copy; 2026 Marathon. All rights reserved.
  </footer>

  <!-- Custom Alert Modal -->
  <div id="customAlert" class="fixed inset-0 z-[100] hidden items-center justify-center p-4">
    <div class="absolute inset-0 bg-slate-950/80 backdrop-blur-sm" id="alertBackdrop"></div>
    <div
      class="glass-container relative w-full max-w-md p-8 rounded-3xl shadow-2xl transform transition-all scale-95 opacity-0 duration-300"
      id="alertContainer">
      <div class="text-center space-y-4">
        <div id="alertIcon" class="mx-auto w-16 h-16 rounded-full flex items-center justify-center">
          <!-- Icon will be injected by JS -->
        </div>
        <h3 id="alertTitle" class="text-2xl font-bold"></h3>
        <p id="alertMessage" class="text-slate-400 font-light"></p>
        <button id="closeAlert"
          class="w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 rounded-xl transition-all">
          OK
        </button>
      </div>
    </div>
  </div>

  <style>
    #customAlert.show {
      display: flex;
    }

    #customAlert.show #alertContainer {
      scale: 1;
      opacity: 1;
    }
  </style>

  <script src="/js/client.js"></script>
</body>

</html>